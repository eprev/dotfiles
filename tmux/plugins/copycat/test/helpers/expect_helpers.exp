# a set of expect helpers

# basic setup for each script
proc expect_setup {} {
  # disables script output
  log_user 0
  # standard timeout
  set timeout 5
}

proc exit_status_false {} {
  global exit_status
  set exit_status 1
}

proc teardown_and_exit {} {
  global exit_status
  _kill_tmux_server
  exit $exit_status
}

proc create_output {} {
  # `yes` command just outputs `yes`
  send "yes\r"
  sleep 0.1
  # stop `yes` command
  send ""
  sleep 0.1
}

proc clear_screen {} {
  send ""
  sleep 0.1
}

proc display_text {text} {
  send "echo $text\r"
  sleep 0.1
}

proc new_tmux_pane {} {
  sleep 0.3
  send "c"
  sleep 1
}

proc enter_irb {} {
  send "irb\r"
  sleep 1
}

proc exit_irb {} {
  send "\r"
  sleep 0.1
  send "exit\r"
  sleep 0.5
}

proc irb_display_text {text} {
  send "puts '$text'\r"
  sleep 0.3
}

# Generates random output just to fill the screen.
proc irb_generate_output {} {
  send "puts 'output\n' * 200\r"
  sleep 0.5
}

proc enter_test_git_repo {} {
  sleep 0.2
  send "cd ~/tmux-example-plugin\r"
  sleep 0.1
  send "git checkout --quiet tags/v0.0.1\r"
  sleep 0.2
}

proc git_status {} {
  sleep 0.1
  send "git status --short\r"
  sleep 0.1
}

proc git_checkout {} {
  sleep 0.1
  send "git checkout -- .\r"
  sleep 0.1
}

proc git_clean_fd {} {
  sleep 0.1
  send "git clean -f -d\r"
  sleep 0.1
}

proc clean_git_repo {} {
  git_checkout
  git_clean_fd
}

proc change_file {file} {
  sleep 0.1
  send "echo 'change' > $file\r"
  sleep 0.1
}

proc create_new_file_in_repo {} {
  sleep 0.1
  send "echo 'text' >> new_file.txt\r"
  sleep 0.1
}

proc remove_test_git_repo {} {
  sleep 0.1
  send "cd ~\r"
  sleep 0.1
  send "rm -rf ~/tmux_example_plugin/\r"
  sleep 0.1
}

# private functions

proc _kill_tmux_server {} {
  send ""
  sleep 0.1
  send "tmux kill-server\r"
  sleep 0.2
}
